<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-group text-center'}) do |f| %>
  <div class="form-group form-col">
    <%= f.email_field :email, autofocus: true, class: 'form-control text-center', placeholder: 'Email' %>
  </div>

  <div class="form-group form-col">
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control text-center', placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
